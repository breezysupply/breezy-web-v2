---
import '../styles/global.css';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Brett Pierce's personal website" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>

<style is:global>
	:root {
		--text-color: #000000;
		--bg-gradient: linear-gradient(145deg, #cbd5e1 0%, #ffffff 100%);
	}

	:root.dark {
		--text-color: #ffffff;
		--bg-gradient: linear-gradient(145deg, #050824 0%, #000000 100%);
	}

	body {
		margin: 0;
		color: var(--text-color);
		background: var(--bg-gradient);
		transition: color 0.2s, background 0.2s;
	}

	body :global(.dark) {
		background: var(--bg-gradient);
		min-height: 100vh;
	}
</style>
